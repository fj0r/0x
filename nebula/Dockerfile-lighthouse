FROM fj0rd/io as build

RUN set -eux \
  ; apt-get update \
  ; DEBIAN_FRONTEND=noninteractive \
  ; apt-get install -y --no-install-recommends \
        ca-certificates \
  ; apt-get autoremove -y && apt-get clean -y && rm -rf /var/lib/apt/lists/* \
  \
  ; mkdir /root/assets && cd /root/assets \
  \
  ; url=$(xh https://api.github.com/repos/slackhq/nebula/releases Accept:application/vnd.github.v3+json \
        | jq -r '.[0].assets[].browser_download_url' | grep linux-amd64) \
  ; xh -F ${url} | tar zxf - \
  ; strip -s nebula* \
  \
  ; coredns_url=$(xh https://api.github.com/repos/coredns/coredns/releases Accept:application/vnd.github.v3+json \
        | jq -r '[.[]|select(.prerelease == false)][0].assets[].browser_download_url' | grep 'linux_amd64.tgz$') \
  ; xh -F ${coredns_url} | tar zxf - \
  ; chmod +x coredns \
  ; strip -s coredns


FROM fj0rd/io:base
WORKDIR /app

RUN set -eux \
  ; s6overlay_url=$(xh https://api.github.com/repos/just-containers/s6-overlay/releases Accept:application/vnd.github.v3+json \
      | jq -r '.[0].assets[].browser_download_url' | grep -v sig | grep amd64.tar) \
  ; xh -F ${s6overlay_url} | tar xzvf - -C /

COPY --from=build /root/assets /usr/local/bin
COPY services /etc/services.d
COPY config.yaml /app/config.yaml.tmpl
COPY join.bash /
EXPOSE 51821/udp
ENV NETWORK_ID NEBULA_CONFIG
ENV VHOST VCIDR
ENV HOST_IP HOST_PORT

#s6
ENTRYPOINT [ "/init"]

